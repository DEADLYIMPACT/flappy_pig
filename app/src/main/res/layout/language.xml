<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_back"
    android:gravity="center">


    <LinearLayout
        android:id="@+id/langLl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/popup_back"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:gravity="center_horizontal"
        android:paddingRight="20dp"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixel2"
                android:text="@string/lang_change"
                android:textColor="@android:color/black"
                android:layout_alignParentLeft="true"
                android:textSize="20dp" />

            <Button
                android:id="@+id/closeLang"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/close"
                android:layout_alignParentRight="true"
                android:elevation="1dp" />
        </RelativeLayout>


        <Button
            android:id="@+id/english"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#000000"
            android:text="ENGLISH"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/spanish"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:text="SPANISH - español"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/russian"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:text="RUSSIAN - русский"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/portuguese"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:text="PORTUGUESE - Português"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/french"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:text="FRENCH - français"
            android:textColor="#ffffff" />


    </LinearLayout>
</RelativeLayout>
